{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "inlineSourceMap": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "stripInternal": true,
        "skipLibCheck": true,
        "pretty": true,
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "typeRoots": ["./typings", "./node_modules/@types"],
        "types": ["node", "jest"]
    },
    "exclude": ["dist", "node_modules", "test"]
    // "ts-node": {
    //     "compilerOptions": {
    //         "module": "commonjs"
    //     }
    // }
}
